---
import sapling from "../assets/sapling.png";
import background from "../assets/background.svg";
---

<main class="flex flex-col justify-center animate-fade-in pt-[10vh]">
  <section class="px-16 max-w-4xl w-full grid justify-center md:grid-cols-[auto_1fr] items-center gap-8">
    <img src={sapling.src} alt="Sapling" class="mt-10 w-3xs" />
    <div>
      <h1 class="text-8xl">remisense</h1>
      <p class="text-4xl mt-10 font-light">A digital garden of reminiscent moments</p>
    </div>
  </section>
  <section class="bg-daisy-500 h-[80vh] mt-32 w-full"></section>
</main>

<style>
  @font-face {
    font-family: "Zain";
    src: url("/remisense/fonts/zain/Zain-Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Zain";
    src: url("/remisense/fonts/zain/Zain-Light.ttf") format("truetype");
    font-weight: light;
    font-style: normal;
  }

  :root {
    background: #eaead7;
    color: #232323;
    font-family: "Zain", sans-serif;
  }
</style>
